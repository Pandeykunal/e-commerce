  <!-- Final version: Clean loop with new styling -->
  <% products.forEach((elem) => { %>
    <div class="prod">
      <div class="top">
        <% if (elem.image) { %>
          <img src="<%= elem.image %>" alt="product image">
        <% } else { %>
          <p>No image available</p>
        <% } %>
      </div>
      <div class="bottom">
        <a href="/product/<%= elem.id %>"><h2><%= elem.title %></h2></a>
        <p><%= elem.category %></p>
        <p>Price: ₹<%= elem.price %></p>
      </div>
    </div>
  <% }); %>

